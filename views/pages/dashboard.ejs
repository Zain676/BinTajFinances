    <div class="d-flex flex-wrap justify-content-between text-center">
      <div class="stat-box flex-fill m-1 p-2 bg-light rounded">
        <h4>Total Spent</h4>
        <h3 class="text-danger">Rs <%= totalSpent %></h3>
      </div>
      <div class="stat-box flex-fill m-1 p-2 bg-light rounded">
        <h4>Total Received</h4>
        <h3 class="text-success">Rs <%= totalReceived %></h3>
      </div>
      <div class="stat-box flex-fill m-1 p-2 bg-light rounded">
        <h4>Remaining</h4>
        <h3 class="text-primary">Rs <%= remaining %></h3>
      </div>
    </div>

    <h2>Purchases</h2>
    <div class="table-responsive">
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% allPurchases.forEach(p => { %>
          <tr class="clickable-row" data-href="/purchase/<%= p._id %>">
            <td><%= p.date.toISOString().split('T')[0] %></td>
            <td><%= p.amount %></td>
            <td><%= p.category %></td>
            <td>
              <a href="/edit-purchase/<%= p._id %>" class="btn btn-sm"
                ><i class="fa-solid fa-pen"></i
              ></a>
              <form
                action="/delete-purchase/<%= p._id %>"
                method="POST"
                style="display: inline"
              >
                <button type="submit" class="btn btn-sm">
                  <i class="fa-solid fa-trash" style="color: #ff0000"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <h2>Receipts</h2>
    <div class="table-responsive">
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% allReceipts.forEach(r => { %>
            <tr class="clickable-row" data-href="/receipt/<%= r._id %>">
              <td><%= r.date.toISOString().split('T')[0] %></td>
              <td><%= r.amount %></td>
              <td><%= r.category %></td>
              <td>
                <a href="/edit-receipt/<%= r._id %>" class="btn btn-sm"
                  ><i class="fa-solid fa-pen"></i
                ></a>
                <form
                  action="/delete-receipt/<%= r._id %>"
                  method="POST"
                  style="display: inline"
                >
                  <button type="submit" class="btn btn-sm">
                    <i class="fa-solid fa-trash" style="color: #ff0000"></i>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
